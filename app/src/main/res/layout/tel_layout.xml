<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_lay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <android.support.constraint.Guideline
        android:id="@+id/line_1"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/idof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible" />

    <TextView
        android:id="@+id/fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ted Jakart"
        android:textColor="#777"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@id/line_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Moscow"
        android:textColor="#777"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="@id/fname"
        app:layout_constraintTop_toBottomOf="@id/fname" />

    <TextView
        android:id="@+id/pre-email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/fname"
        app:layout_constraintTop_toBottomOf="@id/city" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hui.teda@google.com"
        android:textColor="#777"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/fname"
        app:layout_constraintTop_toBottomOf="@id/pre-email" />

    <TextView
        android:id="@+id/pre-tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telephone Numbers"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/fname"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <TextView
        android:id="@+id/tel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text=""
        android:textColor="#777"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/fname"
        app:layout_constraintTop_toBottomOf="@id/pre-tel" />

    <TextView
        android:id="@+id/tel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text=""
        android:textColor="#777"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/fname"
        app:layout_constraintTop_toBottomOf="@id/tel1" />

    <TextView
        android:id="@+id/tel3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:text=""
        android:textColor="#777"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/fname"
        app:layout_constraintTop_toBottomOf="@id/tel2" />

</android.support.constraint.ConstraintLayout>
