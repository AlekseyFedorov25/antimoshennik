<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_lay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <android.support.constraint.Guideline
        android:id="@+id/line_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="50dp" />

    <TextView
        android:id="@+id/idof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible" />

    <TextView
        android:id="@+id/pre-fname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textColor="#777"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/fname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="#777"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@id/pre-fname"
        app:layout_constraintLeft_toRightOf="@id/pre-fname"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/pre-fname"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/pre-city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="City"
        android:textColor="#777"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/city"
        app:layout_constraintTop_toBottomOf="@id/pre-fname"
        app:layout_constraintWidth_percent="0.2" />

    <TextView
        android:id="@+id/city"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="#777"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="@id/pre-city"
        app:layout_constraintLeft_toRightOf="@id/pre-city"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/pre-city"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/pre-email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="E-mail"
        android:textColor="#777"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/email"
        app:layout_constraintTop_toBottomOf="@id/pre-city"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:textColor="#777"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/pre-email"
        app:layout_constraintLeft_toRightOf="@id/pre-email"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:id="@+id/pre-tel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Telephone Numbers"
        android:textColor="#777"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tel-layout"
        app:layout_constraintTop_toBottomOf="@id/pre-email"
        app:layout_constraintWidth_percent="0.4" />

    <LinearLayout
        android:id="@+id/tel-layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/pre-tel"
        app:layout_constraintLeft_toRightOf="@id/pre-tel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/pre-tel"
        app:layout_constraintWidth_percent="0.6">

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
